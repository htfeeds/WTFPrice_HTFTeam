<div class="row news-top" style="margin: 0 0">
    <div class="col-md-8 news-menu" style="margin: 0; padding: 0;">
        <ul class="list-inline">
            <li>
                <a href="/News/Index">Tin mới</a>
               @*@Html.ActionLink("Tin mới","Index","News",null,null)*@
            </li>
            <li>
                <a href="@Url.Action("Index", "News", new {id = 12})">Công nghệ</a>
                <div class="inner-hidden">
                    @Html.Partial("PartialNews/_PartialNewsDropDownTop", @Model.SortByCategoryTech)<p>
                        <a href="@Url.Action("Index", "News", new {id = 12})">Xem thêm &rarr;</a>
                    </p>
                </div>
            </li>
            <li>
                <a href="@Url.Action("Index", "News", new {id = 17})">Khuyến mãi</a>
                <div class="inner-hidden">
                    @Html.Partial("PartialNews/_PartialNewsDropDownTop", @Model.SortByCategoryDiscount)<p>
                        <a href="@Url.Action("Index", "News", new {id = 17})">Xem thêm &rarr;</a>
                    </p>
                </div>
            </li>
            <li>
                <a href="@Url.Action("Index", "News", new {id = 13})">Đánh giá</a>
                <div class="inner-hidden">
                    @Html.Partial("PartialNews/_PartialNewsDropDownTop", @Model.SortByCategoryEvaluate)<p>
