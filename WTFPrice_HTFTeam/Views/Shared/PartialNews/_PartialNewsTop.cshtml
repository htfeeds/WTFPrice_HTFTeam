    <div class="col-md-4 news-search-form">
        @*<form class="form-wrapper cf" action="@Url.Action("Search", "News")" method="POST">
            <input name="searchInput" type="text" placeholder="Tìm kiếm tin tức..." required>

        </form>*@

        @using (Ajax.BeginForm("Search", "News", null,
            new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",
                OnFailure = "searchFailed",
                LoadingElementId = "ajax-loader",
                UpdateTargetId = "SearchResultId"
            },
            new { @class = "form-wrapper cf" }))
        {
            <i class="fa fa-refresh fa-spin" id="ajax-loader" style="display: none; color: rgb(139, 0, 0); font-size: 21px;right: 140px;position: absolute"></i>
            <input type="text" name="searchInput" data-autocomplete-source="@Url.Action("QuickSearch", "News")" placeholder="Tìm kiếm tin tức..." required/>
            <button type="submit">Searh</button>
            @*<img id="ajax-loader" src="@Url.Content("~/images/04.jpg")" style="display: none"/>*@
    
        }
    </div>
</div>

