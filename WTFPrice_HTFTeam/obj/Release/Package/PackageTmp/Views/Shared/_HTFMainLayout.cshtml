<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta property="fb:app_id" content="482158608600562" />
    <meta property="fb:admins" content="100004251395043" />
    <title>@ViewBag.Title - WTFPrice</title>
    @Styles.Render("~/Content/htfcss")
    @RenderSection("Binbundle", required: false)
</head>
<body id="top">
    @if (User.IsInRole("Administrator"))
    {<div id="admin">@Html.ActionLink("Administrator", "Index", "Admin")</div>}
    @Html.Partial("_TopRowPartial")
    @Html.Partial("_MenuPartial")
    @RenderBody()
    @Html.Partial("_FooterPartial")
    @Html.Partial("_CopyrightPartial")
    <a id="backtotop" href="#top"><i class="fa fa-chevron-up"></i></a>
    @Scripts.Render("~/bundles/htfjs")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @RenderSection("Scripts", required: false)
</body>
</html>