@using Microsoft.AspNet.Identity
@model WTFPrice_HTFTeam.Models.EditUserViewModel
@{
    ViewBag.Title = "Edit";
}
<div class="titleUserProfile">Edit Profile</div>
<div class="row">
    <div class="col-md-5" style="margin-left: 40px;">
        <h2 style="text-align: center" class="titleEdit">Change Avatar</h2>
        <hr style="background: darkgrey"/>
        <div id="UploadResultId">
            @if (string.IsNullOrEmpty(Model.Avatar) == false)
            {
                <img src="@Url.Content(Model.Avatar)" class="img-thumbnail img-responsive" style="width: 140px"/>
            }
        </div>
        <div style="height: 15px"></div>
