@model IEnumerable<WTFPrice_HTFTeam.Models.RelatedProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var similarProduct = (List<WTFPrice_HTFTeam.Models.Product>)ViewBag.SimilarProduct;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SimilarProductId)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => similarProduct.FirstOrDefault(x => x.Id == item.SimilarProductId).Name)
            </td>
            <td>
                @Html.HtfActionLink("<i class=\"fa fa-pencil\"></i>", "Edit", new { id = item.Id })
            </td>
            <td>
                @Html.HtfActionLink("<i class=\"fa fa-info\"></i>", "Details", new { id = item.Id })
            </td>
            <td>
                @Html.HtfActionLink("<i class=\"fa fa-trash-o\"></i>", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
